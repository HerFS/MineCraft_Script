on inventory click:
	if event-inventory's display name contains "{@h} &l강화 단계": # if inventory item cancel
		if clicked raw slot is 49 or 46 or 25 or 22: # cliked true
			if clicked raw slot is 49:
				cancel event
				if slot 19 of current inventory of player is not air:
					set {_체력재료} to slot 22 of current inventory of player
					if name of {_체력재료} contains "{@h2}":
						set {체력강화::%player%::진행중} to true
						set slot 22 {@s} air
						play sound "BLOCK_ANVIL_USE" with volume 0.5 and pitch 1 at player
						loop {체력강화::%player%::아이템::로어::*}:
							if {체력강화::%player%::아이템::로어::%loop-index%} contains "체력":
								set {_체력스탯} to uncolored {체력강화::%player%::아이템::로어::%loop-index%}
								replace all " " and "-" and "체력" with "" in {_체력스탯}
								set {_int} to name of {_체력재료}
								set {_체력스탯} to {_체력스탯} parsed as number
								set {_체력확률::*} to uncolored lore of {_체력재료}
								set {_체력확률::1} to {_체력확률::1} parsed as number
								chance of {_체력확률::1}%:
									add 1 to {_체력스탯}
									loop {체력강화::%player%::아이템::로어::*}:
										if {체력강화::%player%::아이템::로어::%loop-index-2%} contains "체력":
											set {체력강화::%player%::아이템::로어::%loop-index-2%} to "&f - 체력 %{_체력스탯}%"
									set slot 19 {@s} air
									set {_체력이름} to uncolored name of {체력강화::%player%::아이템}
									replace all {_체력이름} with "" in {_체력이름색}
									set {_체력이름::*} to uncolored {_체력이름}
									if {_체력이름::2} is set:
										replace all " " with "" in {_체력이름::2}
										set {_체력이름::2} to {_체력이름::2} parsed as number
										add 1 to {_체력이름::2}
										set {_체력최종이름} to "%{_체력이름::1}%"
